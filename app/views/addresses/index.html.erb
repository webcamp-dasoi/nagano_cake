<h1>配送先登録/一覧</h1>

<%= form_for(@address, url: '/addresses') do |f| %>
  <h4>郵便番号</h4>
  <%= f.text_field :post_number %>
  <h4>住所</h4>
  <%= f.text_field  :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit '登録する' %>
<% end %>


  <% if @address.end_user == current_end_user %>
     <% @address.each do |adress| %>
    <tbody>
    <td><%= adress.post_number %></td>
    <td><%= adress.adress %></td>
    <td><%= adress.name %></td>
    <td><%= link_to 'Edit', '#', class: "btn-sm btn-success edit_book_#{@address.id}" %></td>
    <td><%= link_to 'Destroy','#', method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger destroy_adress_#{@address.id}"%></td>
  </tbody>
  <% end %>
  <% end %>