<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-4">
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "end_users/shared/error_messages", resource: resource %>

        <div class="field">
          <span>名前</span>
          <%= f.label :last_name, "(性)" %>
          <%= f.text_field :last_name, autofocus: true %>

          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <span>フリガナ</span>
          <%= f.label :kana_last_name, "(セイ)" %>
          <%= f.text_field :kana_last_name %>

          <%= f.label :kana_first_name, "(メイ)" %>
          <%= f.text_field :kana_first_name %>
        </div>

        <div class="field">
          <span>メールアドレス</span>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <span>郵便番号(ハイフンあり)</span>
          <%= f.text_field :post_number %>
        </div>

        <div class="field">
          <span>住所</span>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <span>電話番号(ハイフンなし)</span>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="field">
          <span>パスワード
           <% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)
           <% end %>
          </span>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <span>パスワード(確認用)</span>
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "end_users/shared/links" %>

    </div>
  </div>
</div>