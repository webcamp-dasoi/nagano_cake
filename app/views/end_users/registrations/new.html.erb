<div class="container">
  <h2 class="signup-title">
    <div class="signup-detail">新規会員登録</div>
  </h2>

  <div class="form-style">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "end_users/shared/error_messages", resource: resource %>

      <div class="row field">
        <span class="col-md-3">名前</span>
        <%= f.label :last_name, "(姓)", class: "col-md-1" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-md-3" %>

        <%= f.label :first_name, "(名)", class: "col-md-1" %>
        <%= f.text_field :first_name, class: "col-md-3" %>
      </div>

      <div class="row field">
        <span class="col-md-3">フリガナ</span>
        <%= f.label :kana_last_name, "(セイ)", class: "col-md-1" %>
        <%= f.text_field :kana_last_name, class: "col-md-3" %>

        <%= f.label :kana_first_name, "(メイ)", class: "col-md-1" %>
        <%= f.text_field :kana_first_name, class: "col-md-3" %>
      </div>

      <div class="row field">
        <span class="col-md-3">メールアドレス</span>
        <%= f.email_field :email, class: "col-md-3 col-md-offset-1" %>
      </div>

      <div class="row field">
        <span class="col-md-3">郵便番号(ハイフンあり)</span>
        <%= f.text_field :post_number, class: "col-md-3 col-md-offset-1" %>
      </div>

      <div class="row field">
        <span class="col-md-3">住所</span>
        <%= f.text_field :address, class: "col-md-7 col-md-offset-1" %>
      </div>

      <div class="row field">
        <span class="col-md-3">電話番号(ハイフンなし)</span>
        <%= f.text_field :telephone_number, class: "col-md-3 col-md-offset-1" %>
      </div>

      <div class="row field">
        <span class="col-md-3">パスワード
         <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
         <% end %>
        </span>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-md-3 col-md-offset-1" %>
      </div>

      <div class="row field">
        <span class="col-md-3">パスワード(確認用)</span>
        <%= f.password_field :password_confirmation, class: "col-md-3 col-md-offset-1" %>
      </div>

      <div class="signup-action">
        <%= f.submit "新規登録", class: "btn signup-btn", style: "font-size: 20px; padding: 5px 60px; color: #fff; background-color: #d68a00;" %>
      </div>
    <% end %>
  </div>

  <%= render "end_users/shared/links" %>


</div>