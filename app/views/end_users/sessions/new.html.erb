<div class="container">

  <h2 class="signin-title">
    <div class="signin-detail">会員の方はこちらからログイン</div>
  </h2>
  <% if admin_signed_in? %>
    <h2>管理者権限でログインしています。ログアウトしてください</h2>
  <% else %>
    <div class="form-style">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row field signin-form">
          <%= f.label :email, "メールアドレス", class: "col-md-3 col-md-offset-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-5" %>
        </div>

        <div class="row field signin-form">
          <%= f.label :password, "パスワード", class: "col-md-3 col-md-offset-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-5" %>
        </div>

        <div class="row">
          <div class="forget-password col-md-6 col-md-offset-4">
            →　<%= link_to "パスワードを忘れた方はこちら", new_end_user_password_path(resource_name), class: "forget-password-link" %>
          </div>
        </div>

        <div class="row field">
          <% if devise_mapping.rememberable? %>
            <div class="col-md-3 col-md-offset-2 signin-action">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <%= f.submit "ログイン", class: "btn col-md-3 col-md-offset-2 login-btn", style: "font-size: 20px; padding: 5px 15px; color: #fff; background-color: #d68a00;" %>
        </div>
      <% end %>
    </div>

    <%= render "end_users/shared/links" %>

  <% end %>

</div>
