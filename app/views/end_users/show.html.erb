<div class="container">
	<h2 class="mypage-title">マイページ</h2>
	<div class="row">
		<h3 class="mypage-small-title col-md-3 col-md-offset-2">登録情報</h3>
		<%= link_to "編集する", end_users_edit_path, class: 'mypage-to-edit col-md-2' %>
		<%= link_to "パスワードを変更する", '#', class: 'mypage-to-password col-md-2' %>
	</div>

	<div>
		<table class="mypage-table">
			<tbody>
				<tr>
					<td class="danger mypage-table-title">氏名</td>
					<td class="mypage-table-content"><%= @end_user.last_name %> <%= @end_user.first_name %></td>
				</tr>
				<tr>
					<td class="danger mypage-table-title">カナ</td>
					<td class="mypage-table-content"><%= @end_user.kana_last_name %> <%= @end_user.kana_first_name %></td>
				</tr>
				<tr>
					<td class="danger mypage-table-title">郵便番号</td>
					<td class="mypage-table-content"><%= @end_user.post_number %></td>
				</tr>
				<tr>
					<td class="danger mypage-table-title">住所</td>
					<td class="mypage-table-content"><%= @end_user.address %></td>
				</tr>
				<tr>
					<td class="danger mypage-table-title">電話番号</td>
					<td class="mypage-table-content"><%= @end_user.telephone_number %></td>
				</tr>
				<tr>
					<td class="danger mypage-table-title">メールアドレス</td>
					<td class="mypage-table-content"><%= @end_user.email %></td>
				</tr>
			</tbody>
		</table>
	</div>


	<div class="row">
		<h3 class="mypage-small-title col-md-3 col-md-offset-2">配送先</h3>
		<%= link_to "一覧を見る", addresses_path, class: 'mypage-link col-md-3' %>
	</div>

	<div class="row">
		<h3 class="mypage-small-title col-md-3 col-md-offset-2">注文履歴</h3>
		<%= link_to "一覧を見る", orders_path, class: 'mypage-link col-md-3' %>
	</div>
</div>