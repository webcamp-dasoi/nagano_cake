<div class="container">

	<h2 class="orders-index-title">
		<div class="orders-index-detail">注文履歴一覧</div>
	</h2>


	<table class="orders-index-table">
		<thead>
			<tr>
				<th class="orders-index-table-title">注文日</th>
				<th class="orders-index-table-title">配送先</th>
				<th class="orders-index-table-title">注文商品</th>
				<th class="orders-index-table-title">支払い金額</th>
				<th class="orders-index-table-title">ステータス</th>
				<th class="orders-index-table-title">注文詳細</th>
			</tr>
		</thead>

		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td class="orders-index-table-content">
						<%= order.created_at.strftime('%Y/%m/%d') %>
					</td>
					<td class="orders-index-table-content">
						<%= order.shipping_name %> <br>
						<%= order.shipping_post_number %> <br>
						<%= order.shipping_address %>
					</td>
					<td class="orders-index-table-content">
						<% order.order_products.each do |order_product| %>
							<%= order_product.product.name %> <br>
						<% end %>
					</td>
					<td class="orders-index-table-content">
						<%= order.amount_billed %>円
					</td>
					<td class="orders-index-table-content">
						<%= order.order_status %>
					</td>
					<td class="orders-index-table-content">
						<%= link_to "表示する", order_path(order), class: "orders-index-action" %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>


</div>
