<h2>注文情報入力</h2>

<%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
<h3>支払い方法</h3>


  <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
  <%= f.label :クレジットカード, class: "payment_method_label" %>

  <%= f.radio_button :payment_method, :銀行振込 %>
  <%= f.label :銀行振込, class: "payment_method_label" %>


<h3>お届け先</h3>


  <%= f.radio_button 'shipping', '0', onclick: "entryChange();"%>ご自身のご住所
  <div id="my_address" style="display: none;">
    <%= current_end_user.post_number %>
    <%= current_end_user.address %>
    <p><%= current_end_user.last_name %> <%= current_end_user.first_name %></p>  
  </div>

  <%= f.radio_button 'shipping', '1', onclick: "entryChange();" %>登録済住所から選択
  <div id="registered_address" style="display: none;">
    <% if @address.blank? %>
      <p>登録済み住所はありません</p>
    <% else %>
      <%= f.collection_select(:addresses, @address, :id, :name) %>
    <% end %>
  </div>


  <%= f.radio_button 'shipping', '2', onclick: "entryChange();" %>新しい住所を入力する
  <div id="new_address" style="display: none;">
      <%= f.text_field :shipping_post_number %>
      <%= f.label :shipping_post_number, "郵便番号（ハイフンあり）" %>

      <%= f.text_field :shipping_address %>
      <%= f.label :shipping_address, "住所" %>

      <%= f.text_field :shipping_name %>
      <%= f.label :shipping_name, "宛名" %>
  </div>

  <div class="action">
    <%= f.submit "購入確認画面に進む" %>
  </div>

<% end %>


