<div class="row" >
<h4>注文履歴詳細</h4>
	<h5>注文情報</h5>
<table class>
		<tr>
			<th>注文日</th>
			<td><%= @order.created_at %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td>
				〒<%= @order.shipping_post_number %><br>
				<%= @order.shipping_address %><br>
				<%= @order.last_name %> <%= @order.first_name %>様
			</td>
		</tr>
		<tr>
			<th>支払い方法</th>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @order.oder_status %></td>
		</tr>
</table>

<h5>請求情報</h5>
<table class>
	<tbody>
		<tr>
			<th>商品合計</th>
			<td><%= @order.total_price %>円</td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.shipping_cost %>円</td>
		</tr>
		<tr>
			<th>ご請求額</th>
			<td><%= @order.total_price+ @order.shipping_cost %>円</td>
		</tr>
	</tbody>
</table>

<h5>注文内容</h5>
<table class>
		<tr>
			<td>
			  <% @order.order_products.each do |product| %>
				<%= product.name %> (<%= product.non_tax_price * 1.1 %>円) %>円) ×<%= product.quantity %>個＝　円
			  <% end %>
			</td>
		</tr>
</table>
</div>