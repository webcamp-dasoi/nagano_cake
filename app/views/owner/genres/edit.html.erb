<div class="container">
	<h3>ジャンル編集</h3>
	<div class="row">
		<table class="table">
			<%= form_with model: [:owner, @genre], local:true do |f| %>
			
			<tbody>
				<tr>
					<td><%= f.label :name, 'ジャンル名' %></td>
					<td><%= f.text_field :name %></td>
					<td><%= f.radio_button :is_active, :true %> <%= f.label :有効 %></td>
					<td><%= f.radio_button :is_active, :false %> <%= f.label :無効 %></td>
					<td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
				</tr>
			</tbody>

			<% end %>
		</table>
	</div>
</div>