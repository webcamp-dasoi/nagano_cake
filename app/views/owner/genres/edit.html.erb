<div class="container">
	<h3>ジャンル編集</h3>
	<div class="row">
		<%= form_with model: [:owner, @genre], local:true do |f| %>

			<%= f.label :name, 'ジャンル' %>
			<%= f.text_field :name %>

			<%= f.radio_button :is_active, :true %>
			<%= f.label :有効 %>

			<%= f.radio_button :is_active, :false %>
			<%= f.label :無効 %>

			<%= f.submit '変更を保存', class: "btn btn-primary" %>

		<% end %>

	</div>
</div>