<h2>ジャンル一覧・追加</h2>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= genre.is_active %></td>
				<td><%= link_to "編集する", owner_genre_path(genre), class: "btn btn-primary" %></td>
			</tr>
		<% end %>
	</tbody>
</table>