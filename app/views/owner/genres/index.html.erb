<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<h3>ジャンル一覧・追加</h3>
			<table class="table">
				<thead>
					<tr class="info">
						<th>ジャンル名</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<%= form_with model: [:owner, @genre], local: true do |f| %>
						<tr>
							<td><%= f.text_field :name %></td>

							<td><%= f.radio_button :is_active, :true, checked: "checked" %> <%= f.label :有効 %></td>
							<td><%= f.radio_button :is_active, :false %> <%= f.label :無効 %></td>

							<td><%= f.submit "追加", class: "btn btn-success" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<table class="table">
				<thead>
					<tr class="info">
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= genre.is_active ? '有効' : '無効' %></td>
							<td><%= link_to "編集する", edit_owner_genre_path(genre), class: "btn btn-primary" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>