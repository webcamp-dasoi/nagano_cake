<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>注文履歴一覧画面</h3>

			<table class="table">
				<thead>
					<tr class="info">
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>ステータス</th>
					</tr>
				</thead>

				<tbody>
					<% @orders.each do |order| %>
						<tr>
							<td><%= link_to order[:created_at].strftime("%Y-%m-%d %H:%M"), edit_owner_order_path(order)%></td>
							<td><%= order.end_user.last_name %><%= order.end_user.first_name %></td>
							<td><%= order.order_products.sum(:quantity) %></td>
							<td><%= order.order_status %></td>
						</tr>
					<%end%>
				</tbody>
			</table>

			<div class="text-center">
				<%= paginate @orders %>
			</div>

	</div>
</div>