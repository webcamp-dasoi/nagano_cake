<div class="container">
 <div class = "row">
  <h3>商品詳細</h3>
   <div class="col-xs-6">
   	<%= attachment_image_tag @product, :image, :fill, 500, 500, format: 'jpeg'  %>
   </div>

	<div class="col-xs-6">
		<table class="table">
			<tr>
				<th>商品名</th>
				<td><%= @product.name %></td>
			</tr>

			<tr>
				<th>商品説明</th>
				<td><%= @product.introduction %></td>
			</tr>

			<tr>
				<th>ジャンル</th>
				<td><%= @product.genre.name %></td>
			</tr>

			<tr>
				<th>税込価格（税抜き価格）</th>
				<td><%= (@product.non_tax_price * 1.1).floor %>(<%= @product.non_tax_price %>)円</td>
			</tr>

			<tr>
				<th>販売ステータス</th>
				<th><%= @product.is_active ? "販売中" : "売切れ" %></th>
			</tr>
		</table>

		<div class="text-right">
			<%= link_to "編集する", edit_owner_product_path(@product.id), class: "btn btn-primary btn-lg" %>
		</div>

   </div>
 </div>
</div>
