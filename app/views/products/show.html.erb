<div class="container">
	<div class="row">

		<div class="col-md-3">
			ジャンル検索
		</div>

		<div class="col-md-9">

			<div class="row">
				<div class="col-md-5">
					<%= attachment_image_tag @product, :image, :fill, 50, 50, format: 'jpeg' %>
				</div>

				<div class="col-md-7">
					<h3><%= @product.name %></h3>
					<p><%= @product.introduction %></p>
					<h4>￥ <%= @product.non_tax_price * 1.1 %></h4>
					<p>（税込）</p>
				</div>

				<%= form_with model: @cart_product, local: true do |f| %>
					<%= f.select :quantity, (1..50), :prompt => "個数選択" %>
					<%= f.hidden_field :product_id, value: @product.id %>
					<%= f.submit "カートに入れる", class: "btn btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
